@model LocaCarro.Presentation.Models.Cliente.ListViewModel

@{
    ViewBag.Title = "Clientes";
}

<h2>Listagem de Clientes</h2>

<p>
    @Html.ActionLink("Novo Cliente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Clientes.FirstOrDefault().Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clientes.FirstOrDefault().Fidelidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clientes.FirstOrDefault().CriadoEm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clientes.FirstOrDefault().AlteradoEm)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Clientes) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fidelidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CriadoEm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlteradoEm)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
