@model LocaCarro.Presentation.Models.Loja.ListViewModel

@{
    ViewBag.Title = "Lojas";
}

<h2>Listagem de Lojas</h2>

<p>
    @Html.ActionLink("Nova Loja", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Lojas.FirstOrDefault().Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lojas.FirstOrDefault().Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lojas.FirstOrDefault().CriadoEm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lojas.FirstOrDefault().AlteradoEm)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Lojas) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CriadoEm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlteradoEm)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
